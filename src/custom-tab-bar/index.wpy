<!-- index.wpy -->
<template>
  <view style="position:relative">
    <van-tabbar
      :active="active"
      @change="Change($event)"
      :border="false"
      :inactive-color="color"
      :active-color="selectedColor"
      placeholder
    >
      <van-tabbar-item
        name="home"
        icon="bag"
      >首页</van-tabbar-item>
      <van-tabbar-item
        name="cart"
        icon="cart"
      >购物车</van-tabbar-item>
      <van-tabbar-item name="pub">
        <!-- icon="add" -->
        <image
          slot="icon"
          src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fphoto.orsoon.com%2F2019%2F07%2F23%2FJPG-190723_337%2FFgjmUxxb15_small.jpg&refer=http%3A%2F%2Fphoto.orsoon.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1644145698&t=30194b8d833988030bdbef2fa72ed58d"
          mode="aspectFit"
          style="width: 30px; height: 18px;position:relative;bottom:30%;transform:scale(2)"
        />
        <image
          slot="icon-active"
          src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fphoto.orsoon.com%2F2019%2F07%2F23%2FJPG-190723_337%2FFgjmUxxb15_small.jpg&refer=http%3A%2F%2Fphoto.orsoon.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1644145698&t=30194b8d833988030bdbef2fa72ed58d"
          mode="aspectFit"
          style="width: 30px; height: 18px;"
        />
        发布</van-tabbar-item>
      <van-tabbar-item
        name="news"
        icon="chat"
      >消息</van-tabbar-item>
      <van-tabbar-item
        name="user"
        icon="manager"
      >我的</van-tabbar-item>
    </van-tabbar>

    <!-- 倒计时 -->
    <view
      class="countDown"
      v-if="countDown!=0"
    >
      {{countDownFormatter}}
    </view>

    <!-- 发布弹框 -->
    <van-popup
      :show="show"
      @close="onClose"
      position="bottom"
      custom-style="height:100px;width:40%;;margin:auto auto 30% 30%;border-radius:5px;background-color:transparent"
      z-index="0"
      duration="0"
    >
      <van-transition
        :show="show"
        name="slide-up"
        :duration="{ enter: 300, leave: 100 }"
      >
        <view>
          <van-button
            type="primary"
            block
            @tap="toPub"
          >出物</van-button>
        </view>
      </van-transition>
    </van-popup>

  </view>
</template>

<script>
import wepy from '@wepy/core'
import eventHub from '@/common/eventHub'
import moment from 'moment'

wepy.component({
  data: {
    show: false,
    countDown: 0,
    active: 'home',
    color: '#7A7783',
    selectedColor: '#6280f5',
    tabbar: {
      home: {
        pagePath: 'pages/index',
        text: '首页'
      },
      cart: {
        pagePath: 'pages/cart',
        text: '购物车'
      },
      pub: {
        pagePath: '',
        text: '发布'
      },
      news: {
        pagePath: 'pages/cart',
        text: '购物车'
      },
      user: {
        pagePath: 'pages/user',
        text: '我的'
      }
    }
  },
  attached() {
    eventHub.$on('updateCountDown', time => {
      this.countDown = time
    })
  },
  computed: {
    countDownFormatter() {
      if (this.countDown) {
        return moment(this.countDown).format('mm:ss')
      }
    }
  },
  methods: {
    Change(e) {
      const data = e.$wx.detail
      if (data !== 'pub') {
        this.onClose()
        this.active = data
        const url = this.tabbar[data].pagePath.split('/')[1]
        console.log(`/pages/${url}/index`)
        wx.switchTab({ url: `/pages/${url}/index` })
      } else {
        this.show = !this.show
      }
    },
    async onClose() {
      this.show = false
    },
    toPub() {
      wx.navigateTo({
        url: '/pages/goods/pub/index',
        success: res => {
          this.show = false
        },
        fail: err => {
          console.log(err)
        }
      })
    }
  }
})

// NOTE: 此处导出含 config 属性的类，是为了保证编译后生成 .json 文件
export default class CustomTabBar {
  config = {
    component: true
  }
}
</script>
<config>
{
  usingComponents:{
    "van-tabbar": "~@/components/vant/tabbar",
    "van-tabbar-item": "~@/components/vant/tabbar-item",
    "van-popup": "~@/components/vant/popup",
    "van-button": "~@/components/vant/button",
    "van-transition": "~@/components/vant/transition",
    "van-count-down": "~@/components/vant/count-down"
  }
}
</config>

