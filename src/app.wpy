<script>
import wepy from '@wepy/core'
import eventHub from './common/eventHub'
import vuex from '@wepy/x'
import globalData from '@/globalData.js'

wepy.use(vuex)

wepy.app({
  hooks: {
    // App 级别 hook，对整个 App 生效
    // 同时存在 Page hook 和 App hook 时，优先执行 Page hook，返回值再交由 App hook 处
    'before-setData': function(dirty) {
      console.log('setData dirty: ', dirty)
      return dirty
    }
  },

  onLaunch() {
    // this.testAsync()

    if (!wx.cloud) {
      console.error('请使用 2.2.3 或以上的基础库以使用云能力')
    } else {
      wx.cloud.init({
        traceUser: true,
        env: 'develop-0guqmlrwce7ddc4b'
      })
    }
    wx.getStorage({
      key: 'userInfo',
      fail: () => {
        console.log('未登录')
        wx.setStorage({
          key: 'userInfo',
          data: null
        })
      }
    })
    let interval
    eventHub.$on('addToCart', () => {
      console.log('有新商品添加到购物车！')
      globalData.cartTime = 600000
      // 先清除上一次的定时
      clearInterval(interval)
      interval = null
      interval = setInterval(() => {
        eventHub.$emit('updateCountDown', globalData.cartTime)
        globalData.cartTime = globalData.cartTime - 1000
        if (globalData.cartTime <= 0) {
          // 当倒计时为0时清除定时器、并将购物车清空
          clearInterval(interval)
          interval = null
          globalData.cart = []
        }
      }, 1000)
    })
    eventHub.$once('')
  },

  methods: {
    sleep(s) {
      return new Promise((resolve, reject) => {
        setTimeout(() => {
          resolve('promise resolved')
        }, s * 1000)
      })
    },

    async testAsync() {
      let d = await this.sleep(3)
      console.log(d)
    }
  }
})
</script>
