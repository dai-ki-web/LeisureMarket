              />
              已下架
            </view>
          </view>
        </van-cell>
      </van-cell-group>
      <van-cell-group inset>
        <van-cell
          title="我卖出的"
          use-label-slot
        >
          <view
            slot="label"
            class="slot_label"
          >
            <view
              class="block"
              @click="checkOut('ing')"
            >
              <van-icon
                name="bill-o"
                size="3em"
              />
              进行中
            </view>
            <view
              class="block"
              @click="checkOut('finished')"
            >
              <van-icon
                name="completed"
                size="3em"
              />
              已完成
            </view>
            <!-- <view class="block">
              <van-icon
                name="failure"
                size="3em"
              />
              已关闭
            </view> -->
          </view>

        </van-cell>
      </van-cell-group>
      <van-cell-group inset>
        <van-cell
          title="我买到的"
          use-label-slot
        >
          <view
            slot="label"
            class="slot_label"
          >
            <view
              class="block"
              @click="checkIn('unpaid')"
            >
              <van-icon
                name="paid"
                size="3em"
              />
              未付款
            </view>
            <view
              class="block"
              @click="checkIn('ing')"
            >
              <van-icon
                name="tosend"
