      <van-image
        :src="userInfo.avatarUrl"
        width="100"
        height="100"
        round
      ></van-image>
      <view class="name">{{userInfo.nickName}}</view>
      <van-tag
        :type="userAuth? 'success':'danger'"
        :click="toVerify"
      >{{userAuth? '已认证':'未认证'}}</van-tag>
    </view>

    <!-- 交易 -->
    <view v-if="userAuth? true:false">
      <van-cell-group inset>
        <van-cell
          title="我发布的"
          use-label-slot
        >
          <view
            slot="label"
            class="slot_label"
          >
            <!-- <view class="block">
              <van-icon
                name="records"
